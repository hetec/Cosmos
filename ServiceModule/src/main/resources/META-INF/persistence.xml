<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="cosmos" transaction-type="JTA">
        <description>Persistence provider for the cosmos app</description>
        <jta-data-source>
            jdbc/__derbyPool
        </jta-data-source>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
